<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema principal de la aplicación -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Color de fondo general y color de texto principal -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- Estilo para el fondo de los layouts principales -->
    <style name="MainBackgroundStyle">
        <item name="android:background">@color/background_color</item>
    </style>

    <!-- Estilo para las CardViews de los personajes -->
    <style name="CardStyle">
        <item name="cardBackgroundColor">@color/card_background_color</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>


    <!-- Estilo para el nombre del personaje (texto grande) -->
    <style name="CharacterNameTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Estilo para los textos de descripción y habilidades -->
    <style name="DescriptionTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
